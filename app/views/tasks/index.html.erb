<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Tasks</h1>
  <br>
  <div class="wrapper-grey">
    <table>
      <thead>
        <tr>
          <th class="spacer-column"></th>
          <th><h3>Title</h3></th>
          <th class="spacer-column"></th>
          <th><h3>Status</h3></th>
          <th class="spacer-column"></th>
          <th><h3>Action</h3></th>
        </tr>
        <tr class="spacer-row"><td class="spacer-column"><br></td></tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td class="spacer-column"></td>
            <td><%= task.title %></td>
            <td class="spacer-column"></td>
            <% if task.completed %>
              <td><i class="fa fa-check" aria-hidden="true"></i></td>
            <% else %>
              <td><i class="fa fa-times" aria-hidden="true"></i></td>
            <% end %>
            <td class="spacer-column"></td>
            <td>
              <%= link_to 'Show', task, class: "btn-mine" %>
              <%= link_to 'Edit', edit_task_path(task), class: "btn-mine" %>
              <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-mine" %>
              <%= link_to 'Complete', complete_task_path(task), method: :patch, data: { confirm: 'Are you sure?' }, class: "btn-mine" %>
            </td>

          </tr>
          <tr class="spacer-row"><td class="spacer-column"><br></td></tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'New Task', new_task_path, class: "btn btn-success" %>

</div>
