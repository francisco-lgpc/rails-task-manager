<p id="notice"><%= notice %></p>
<div class="container">
  <div class="wrapper-grey padded">
    <h2> <%= @task.title %> </h2>
    <p> <%= @task.description %> </p>
    <p> <%= @task.completed ? "Completed" : "Not completed" %> </p>

    <%= link_to 'Edit', edit_task_path(@task) %> |
    <%= link_to 'Back', tasks_path %>
  </div>
</div>
